<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_form_view_time_block">
        <field name="name">product.template.time.block</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="sale.product_template_form_view_invoice_policy"/>
        <field name="arch" type="xml">
            <field name="track_service" position="after">
                <field name="hour_block" attrs="{'invisible': ['|', ('type', '!=', 'service'), '|', ('invoice_policy', '!=', 'order'), ('track_service', '!=', 'task')]}"/>
            </field>
        </field>
    </record>

</odoo>
